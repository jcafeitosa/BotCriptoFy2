---
import Layout from '../layouts/Layout.astro';
import { DottedGlowContainer } from '../components/ui/DottedGlowBackground';
import { Card, CardHeader, CardTitle, CardDescription, CardContent } from '../components/ui/Card';
import { Input } from '../components/ui/Input';
import { Button } from '../components/ui/Button';
import { HighlightText } from '../components/ui/HighlightBracket';
---

<Layout title="Change Password - BotCriptoFy">
  <DottedGlowContainer client:load>
  <main class="relative min-h-screen flex items-center justify-center p-4">
    <div class="relative z-10 w-full max-w-md">
      <div class="text-center mb-12">
        <div class="inline-block mb-8">
          <span class="text-4xl font-bold tracking-tight">
            <span class="text-gray-100">Bot</span><span class="text-cyan-400">Cripto</span><span class="text-gray-100">Fy</span>
          </span>
        </div>
        <h1 class="text-3xl font-bold text-gray-100 mb-2">
          Change Your <HighlightText color="coral" client:load>Password</HighlightText>
        </h1>
        <p class="text-gray-300">Required for security on first login</p>
      </div>

      {/* Security Alert */}
      <div class="mb-6 p-4 rounded-xl bg-coral-400/10 border border-coral-400/20">
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-coral-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          <div>
            <p class="text-sm text-coral-400 font-semibold">Password Change Required</p>
            <p class="text-xs text-gray-400 mt-1">
              For your security, you must change your temporary password before accessing the platform.
            </p>
          </div>
        </div>
      </div>

      <div class="bg-gray-950/50 border border-white/10 rounded-2xl p-8">
        <form class="space-y-5">
            <Input
              type="password"
              label="Current Password (Temporary)"
              placeholder="Enter temporary password from email"
              client:load
            />

            <Input
              type="password"
              label="New Password"
              placeholder="Enter new password"
              client:load
            />

            <Input
              type="password"
              label="Confirm New Password"
              placeholder="Re-enter new password"
              client:load
            />

            {/* Password Requirements */}
            <div class="p-4 rounded-xl bg-black border border-white/10">
              <p class="text-sm font-semibold text-white mb-3">Password must contain:</p>
              <ul class="space-y-2">
                <li class="flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  At least 12 characters
                </li>
                <li class="flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  One uppercase letter (A-Z)
                </li>
                <li class="flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  One lowercase letter (a-z)
                </li>
                <li class="flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  One number (0-9)
                </li>
                <li class="flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-2 text-cyan-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  One special character (!@#$%^&*)
                </li>
              </ul>
            </div>

            <button type="submit" class="w-full bg-white text-black hover:bg-gray-200 transition-colors text-base font-semibold px-6 py-3.5 rounded-xl">
              Change Password & Continue →
            </button>
          </form>
        </div>

        {/* Security Tips */}
        <div class="mt-6 p-4 rounded-xl bg-cyan-400/10 border border-cyan-400/20">
          <div class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-cyan-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-sm text-cyan-400 font-semibold">Security Tips</p>
              <ul class="text-xs text-gray-400 mt-1 space-y-1">
                <li>• Never share your password with anyone</li>
                <li>• Use a unique password for this account</li>
                <li>• Enable MFA after changing your password</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </main>
  </DottedGlowContainer>
</Layout>
