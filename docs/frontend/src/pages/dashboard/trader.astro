---
/**
 * @fileoverview Trader Dashboard
 * @description Dashboard para perfil trader com foco em performance e segurança
 * @security Middleware de autenticação + validação de role
 * @performance Carregamento assíncrono de dados de mercado
 */

import Layout from '../../layouts/Layout.astro';
import { ProfileCard } from '../../components/dashboard/ProfileCard';
import { LogoutButton } from '../../components/dashboard/LogoutButton';

// SECURITY: Middleware de autenticação (implementado via client-side)
---

<Layout title="Trader Dashboard - BotCriptoFy">
  <div class="min-h-screen bg-black text-white">
    <!-- Header -->
    <header class="border-b border-gray-800 bg-black/50 backdrop-blur-sm sticky top-0 z-50">
      <div class="container mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-100">Trader Dashboard</h1>
            <p class="text-sm text-gray-300">Trading & Portfolio Management</p>
          </div>
          
          <div class="flex items-center gap-4">
            <span class="px-3 py-1 bg-green-500/20 text-green-400 rounded-full text-sm font-medium">
              Trader
            </span>
            <LogoutButton client:load variant="danger" size="sm" />
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-6 py-8">
      <!-- Profile Card -->
      <div class="mb-8">
        <ProfileCard client:load />
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <!-- Portfolio Stats -->
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
          <h3 class="text-gray-300 text-sm font-medium mb-2">Portfolio Value</h3>
          <p class="text-3xl font-bold text-gray-100" id="portfolio-value">$-</p>
        </div>
        
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
          <h3 class="text-gray-300 text-sm font-medium mb-2">Total P&L</h3>
          <p class="text-3xl font-bold text-gray-100" id="total-pnl">$-</p>
        </div>
        
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
          <h3 class="text-gray-300 text-sm font-medium mb-2">Active Bots</h3>
          <p class="text-3xl font-bold text-gray-100" id="active-bots">-</p>
        </div>
        
        <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
          <h3 class="text-gray-300 text-sm font-medium mb-2">Open Orders</h3>
          <p class="text-3xl font-bold text-gray-100" id="open-orders">-</p>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="bg-gray-900/50 border border-gray-800 rounded-xl p-6">
        <h2 class="text-xl font-bold mb-4">Quick Actions</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
          <a href="/bots/create" class="bg-cyan-500/10 hover:bg-cyan-500/20 border border-cyan-500/30 rounded-lg p-4 transition-colors">
            <h3 class="font-semibold mb-1">New Trading Bot</h3>
            <p class="text-sm text-gray-400">Create automated strategy</p>
          </a>
          
          <a href="/portfolio" class="bg-cyan-500/10 hover:bg-cyan-500/20 border border-cyan-500/30 rounded-lg p-4 transition-colors">
            <h3 class="font-semibold mb-1">Portfolio</h3>
            <p class="text-sm text-gray-400">View holdings & performance</p>
          </a>
          
          <a href="/exchanges" class="bg-cyan-500/10 hover:bg-cyan-500/20 border border-cyan-500/30 rounded-lg p-4 transition-colors">
            <h3 class="font-semibold mb-1">Exchanges</h3>
            <p class="text-sm text-gray-400">Connect API keys</p>
          </a>
          
          <a href="/strategies" class="bg-cyan-500/10 hover:bg-cyan-500/20 border border-cyan-500/30 rounded-lg p-4 transition-colors">
            <h3 class="font-semibold mb-1">Strategies</h3>
            <p class="text-sm text-gray-400">Backtest & optimize</p>
          </a>
        </div>
      </div>
    </main>
  </div>

  <script>
    // SECURITY: Validar autenticação ao carregar página
    import { authClient } from '../../lib/auth-client';
    import { fetchUserProfile } from '../../lib/auth-utils';

    async function validateAuth() {
      try {
        // PERFORMANCE: Buscar sessão e perfil em paralelo
        const [session, profile] = await Promise.all([
          authClient.getSession(),
          fetchUserProfile(),
        ]);

        // SECURITY: Redirecionar se não autenticado
        if (!session.data) {
          window.location.href = '/login';
          return;
        }

        // SECURITY: Validar profileType
        if (profile?.profileType !== 'trader') {
          console.warn('⚠️ Redirecting to correct dashboard');
          window.location.href = `/dashboard/${profile?.profileType || 'trader'}`;
          return;
        }

        // PERFORMANCE: Carregar dados do mercado em background
        loadTradingData();
      } catch (error) {
        console.error('Auth validation error:', error);
        window.location.href = '/login';
      }
    }

    async function loadTradingData() {
      // PERFORMANCE: Carregar stats em background
      // TODO: Implementar WebSocket para dados real-time
      document.getElementById('portfolio-value')!.textContent = '$0.00';
      document.getElementById('total-pnl')!.textContent = '$0.00';
      document.getElementById('active-bots')!.textContent = '0';
      document.getElementById('open-orders')!.textContent = '0';
    }

    // SECURITY: Executar validação imediatamente
    validateAuth();
  </script>
</Layout>

