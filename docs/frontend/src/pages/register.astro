---
import Layout from '../layouts/Layout.astro';
import { DottedGlowContainer } from '../components/ui/DottedGlowBackground';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '../components/ui/Card';
import { Input } from '../components/ui/Input';
import { Button } from '../components/ui/Button';
import { OAuthButtons } from '../components/auth/OAuthButtons';
import { HighlightText } from '../components/ui/HighlightBracket';
---

<Layout title="Sign Up - BotCriptoFy">
  <DottedGlowContainer client:load>
  <main class="relative min-h-screen flex items-center justify-center p-4 py-6">
    <div class="relative z-10 w-full max-w-md">
      <div class="text-center mb-8">
        <a href="/" class="inline-block mb-5">
          <span class="text-3xl font-bold tracking-tight">
            <span class="text-gray-100">Bot</span><span class="text-cyan-400">Cripto</span><span class="text-gray-100">Fy</span>
          </span>
        </a>
        <h1 class="text-2xl font-bold text-gray-100 mb-2">
          Create your <HighlightText color="neon" client:load>account</HighlightText>
        </h1>
        <p class="text-sm text-gray-300">Start trading with automated bots in minutes</p>
      </div>

      <div class="bg-gray-950/50 border border-white/10 rounded-2xl p-6">
        <OAuthButtons client:load />

        <div class="relative my-5">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/10"></div>
          </div>
          <div class="relative flex justify-center text-xs">
            <span class="px-4 bg-gray-950 text-gray-500">Or register with email</span>
          </div>
        </div>

        <form class="space-y-5">
            {/* Account Type Selection */}
            <div>
              <label class="block text-sm font-medium text-gray-300 mb-3">Account Type</label>
              <div class="grid grid-cols-2 gap-3">
                <button
                  type="button"
                  class="flex flex-col items-center justify-center p-4 rounded-lg border-2 border-cyan-400 bg-cyan-400/10 text-cyan-400 transition-all hover:bg-cyan-400/20"
                >
                  <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-xs font-semibold">Trader</span>
                </button>
                <button
                  type="button"
                  class="flex flex-col items-center justify-center p-4 rounded-lg border-2 border-white/10 bg-black text-gray-400 transition-all hover:border-white/20"
                >
                  <svg class="w-5 h-5 mb-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
                  </svg>
                  <span class="text-xs font-semibold">Influencer</span>
                </button>
              </div>
            </div>

            <Input
              type="text"
              label="Full Name"
              placeholder="John Doe"
              client:load
            />

            <div class="pt-1">
              <Input
                type="email"
                label="Email"
                placeholder="trader@example.com"
                client:load
              />
            </div>

            <div class="-mt-2">
              <Input
                type="tel"
                label="Phone (Optional - for Telegram MFA)"
                placeholder="+55 11 99999-9999"
                client:load
              />
            </div>

            {/* Terms */}
            <div class="flex justify-center pt-2">
              <label class="flex items-start space-x-2 cursor-pointer">
                <input
                  type="checkbox"
                  required
                  class="mt-1 rounded border-gray-700 bg-black text-cyan-400 focus:ring-cyan-400 focus:ring-offset-black"
                />
                <span class="text-sm text-gray-400">
                  I agree to the{' '}
                  <a href="/terms" class="text-cyan-400 hover:text-cyan-300">Terms of Service</a>
                  {' '}and{' '}
                  <a href="/privacy" class="text-cyan-400 hover:text-cyan-300">Privacy Policy</a>
                </span>
              </label>
            </div>

            <button type="submit" class="w-full bg-white text-black hover:bg-gray-200 transition-colors text-base font-semibold px-6 py-3 rounded-lg">
              Create Account →
            </button>

            <p class="text-center text-sm text-gray-500">
              Already have an account?{' '}
              <a href="/login" class="text-cyan-400 hover:text-cyan-300 font-medium transition-colors">
                Sign in
              </a>
            </p>
          </form>
        </div>

        {/* Important Notice */}
        <div class="mt-4 p-3 rounded-lg bg-gray-900/80 border border-neon-500/30">
          <div class="flex items-start space-x-2">
            <svg class="w-4 h-4 text-neon-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <p class="text-xs text-neon-400 font-semibold">Important</p>
              <p class="text-xs text-gray-300 mt-0.5">
                You will receive a temporary password by email. You'll be required to change it on first login for security.
              </p>
            </div>
          </div>
        </div>

        <div class="mt-4 text-center">
          <a href="/" class="text-xs text-gray-500 hover:text-white transition-colors inline-flex items-center gap-1">
            ← Back to home
          </a>
        </div>
      </div>
    </main>
  </DottedGlowContainer>
</Layout>
