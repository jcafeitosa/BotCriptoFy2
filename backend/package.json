{
  "name": "backend",
  "version": "1.0.50",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "dev:cluster": "bun --watch src/cluster.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun --minify --sourcemap=external",
    "start": "NODE_ENV=production bun dist/index.js",
    "start:dev": "bun src/index.ts",
    "start:cluster": "NODE_ENV=production bun src/cluster.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun src/db/seed.ts",
    "db:reset": "bun src/db/reset.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist node_modules",
    "check": "bun run type-check && bun run lint && bun test"
  },
  "dependencies": {
    "@better-auth/stripe": "^1.3.27",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/swagger": "^1.3.1",
    "@ixjb94/indicators": "^1.2.4",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-jaeger": "^2.1.0",
    "@opentelemetry/instrumentation-http": "^0.206.0",
    "@opentelemetry/instrumentation-pg": "^0.59.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@types/ws": "^8.18.1",
    "better-auth": "^1.3.27",
    "ccxt": "^4.5.11",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "elysia": "latest",
    "ioredis": "^5.8.1",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "redis": "^5.8.3",
    "stripe": "^18.0.0",
    "telegraf": "^4.16.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/node": "^24.7.2",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "bun-types": "latest",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.37.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "module": "src/index.js"
}
