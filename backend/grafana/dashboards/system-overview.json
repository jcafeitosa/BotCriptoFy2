{
  "dashboard": {
    "title": "System Overview Dashboard",
    "tags": ["system", "beecripto", "infrastructure"],
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "panels": [
      {
        "id": 1,
        "type": "stat",
        "title": "API Requests/sec",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "type": "stat",
        "title": "Error Rate",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "Error %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 1, "color": "yellow" },
                { "value": 5, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "type": "stat",
        "title": "P95 Response Time",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "decimals": 0,
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 100, "color": "yellow" },
                { "value": 500, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "type": "stat",
        "title": "Cache Hit Rate",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "avg(cache_hit_rate)",
            "legendFormat": "Hit Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "red" },
                { "value": 50, "color": "yellow" },
                { "value": 70, "color": "green" }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "type": "timeseries",
        "title": "HTTP Requests by Method",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": { "mode": "normal" }
            }
          }
        }
      },
      {
        "id": 6,
        "type": "timeseries",
        "title": "HTTP Status Codes",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{status}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "bars",
              "fillOpacity": 80
            }
          }
        }
      },
      {
        "id": 7,
        "type": "gauge",
        "title": "CPU Usage",
        "gridPos": { "x": 0, "y": 12, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "system_cpu_usage",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 60, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "type": "gauge",
        "title": "Memory Usage",
        "gridPos": { "x": 6, "y": 12, "w": 6, "h": 6 },
        "targets": [
          {
            "expr": "system_memory_usage",
            "legendFormat": "Memory %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 70, "color": "yellow" },
                { "value": 85, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "type": "stat",
        "title": "Heap Used",
        "gridPos": { "x": 12, "y": 12, "w": 6, "h": 3 },
        "targets": [
          {
            "expr": "system_heap_used / 1024 / 1024",
            "legendFormat": "MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "decimals": 0
          }
        }
      },
      {
        "id": 10,
        "type": "stat",
        "title": "Heap Total",
        "gridPos": { "x": 18, "y": 12, "w": 6, "h": 3 },
        "targets": [
          {
            "expr": "system_heap_total / 1024 / 1024",
            "legendFormat": "MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "decimals": 0
          }
        }
      },
      {
        "id": 11,
        "type": "stat",
        "title": "Event Loop Lag",
        "gridPos": { "x": 12, "y": 15, "w": 6, "h": 3 },
        "targets": [
          {
            "expr": "system_event_loop_lag",
            "legendFormat": "ms"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 12,
        "type": "stat",
        "title": "Active Handles",
        "gridPos": { "x": 18, "y": 15, "w": 6, "h": 3 },
        "targets": [
          {
            "expr": "system_active_handles",
            "legendFormat": "Handles"
          }
        ]
      },
      {
        "id": 13,
        "type": "timeseries",
        "title": "Response Time Percentiles",
        "gridPos": { "x": 0, "y": 18, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m])) * 1000",
            "legendFormat": "P99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 14,
        "type": "timeseries",
        "title": "Cache Operations",
        "gridPos": { "x": 12, "y": 18, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(cache_operations_total{result=\"hit\"}[1m])",
            "legendFormat": "Hits"
          },
          {
            "expr": "rate(cache_operations_total{result=\"miss\"}[1m])",
            "legendFormat": "Misses"
          },
          {
            "expr": "rate(cache_operations_total{operation=\"set\"}[1m])",
            "legendFormat": "Sets"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 20,
              "stacking": { "mode": "normal" }
            }
          }
        }
      },
      {
        "id": 15,
        "type": "table",
        "title": "Top Slowest Endpoints",
        "gridPos": { "x": 0, "y": 26, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m])) * 1000)",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "method": "Method",
                "path": "Path",
                "Value": "P95 (ms)"
              }
            }
          }
        ]
      },
      {
        "id": 16,
        "type": "table",
        "title": "Top Active Endpoints",
        "gridPos": { "x": 12, "y": 26, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total[5m]))",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "renameByName": {
                "method": "Method",
                "path": "Path",
                "Value": "Req/sec"
              }
            }
          }
        ]
      },
      {
        "id": 17,
        "type": "timeseries",
        "title": "System Memory Trend",
        "gridPos": { "x": 0, "y": 34, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "system_memory_usage",
            "legendFormat": "Memory %"
          },
          {
            "expr": "system_heap_used / 1024 / 1024",
            "legendFormat": "Heap MB"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 10
            }
          }
        }
      },
      {
        "id": 18,
        "type": "timeseries",
        "title": "CPU Usage Trend",
        "gridPos": { "x": 12, "y": 34, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "system_cpu_usage",
            "legendFormat": "CPU %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "custom": {
              "drawStyle": "line",
              "lineWidth": 2,
              "fillOpacity": 30,
              "gradientMode": "scheme"
            },
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "value": 0, "color": "green" },
                { "value": 60, "color": "yellow" },
                { "value": 80, "color": "red" }
              ]
            }
          }
        }
      },
      {
        "id": 19,
        "type": "heatmap",
        "title": "Request Duration Heatmap",
        "gridPos": { "x": 0, "y": 42, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "rate(http_request_duration_seconds_bucket[1m])",
            "format": "heatmap",
            "legendFormat": "{{le}}"
          }
        ],
        "options": {
          "calculate": true,
          "calculation": {
            "xBuckets": {
              "mode": "size",
              "value": "1min"
            }
          },
          "color": {
            "mode": "spectrum",
            "scheme": "Spectral"
          }
        }
      }
    ]
  }
}
