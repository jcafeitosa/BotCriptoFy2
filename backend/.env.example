# Environment
NODE_ENV=development  # development | production | test

# Server
PORT=3000
APP_VERSION=1.0.0
FRONTEND_URL=http://localhost:4321

# Logging
LOG_LEVEL=debug  # fatal | error | warn | info | http | debug | trace

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/botcriptofy2

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Better-Auth
BETTER_AUTH_SECRET=your-super-secret-auth-key-change-this-in-production
BETTER_AUTH_URL=http://localhost:3000

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Telegram Notifications Provider
TELEGRAM_ENABLED=true
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_from_botfather
TELEGRAM_PARSE_MODE=HTML
TELEGRAM_DISABLE_NOTIFICATION=false

# Ollama (AI)
OLLAMA_BASE_URL=http://localhost:11434

# Build Info (Optional - for CI/CD)
BUILD_NUMBER=dev
GIT_COMMIT=unknown
BUILD_DATE=2024-01-01T00:00:00.000Z

# Social OAuth (Optional - uncomment to enable)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GITHUB_CLIENT_ID=your_github_client_id
# GITHUB_CLIENT_SECRET=your_github_client_secret

# ===================================
# NOTIFICATIONS MODULE (Production-Ready)
# ===================================

# Email Provider Configuration
# Choose provider: smtp | sendgrid
EMAIL_ENABLED=true
EMAIL_PROVIDER=smtp
EMAIL_FROM=noreply@botcriptofy.com
EMAIL_FROM_NAME=BotCriptoFy

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Push Notifications Provider (Firebase Cloud Messaging)
PUSH_ENABLED=true
PUSH_DRY_RUN=false
PUSH_PRIORITY=high
PUSH_TTL=86400
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk@your-project.iam.gserviceaccount.com"}
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Passkeys/WebAuthn (Optional - uncomment to enable)
# PASSKEY_RP_ID=localhost
# PASSKEY_ORIGIN=http://localhost:4321

# Clustering Configuration (Multi-Core Performance)
# Number of worker processes (default: all CPU cores)
# Leave empty to use all available CPUs
# CLUSTER_WORKERS=8

# Worker identification (automatically set by cluster.ts)
# WORKER_ID=1
# WORKER_COUNT=8
