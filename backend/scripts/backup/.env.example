# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=beecripto
DB_USER=postgres
DB_PASSWORD=your_secure_password

# Backup Storage
BACKUP_PATH=/var/backups/beecripto

# Backup Options
BACKUP_ENCRYPTION=true
BACKUP_ENCRYPTION_KEY=your_32_character_encryption_key_here

# S3 Configuration (Optional - for cloud backup storage)
S3_BACKUP_ENABLED=false
S3_BACKUP_BUCKET=beecripto-backups
S3_BACKUP_REGION=us-east-1
S3_BACKUP_PREFIX=database/
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Email Notifications (Optional)
EMAIL_NOTIFICATIONS=false
BACKUP_EMAIL_TO=admin@beecripto.com,devops@beecripto.com
BACKUP_EMAIL_FROM=backups@beecripto.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Slack Notifications (Optional)
SLACK_NOTIFICATIONS=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Discord Notifications (Optional)
DISCORD_NOTIFICATIONS=false
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Node Environment
NODE_ENV=production
