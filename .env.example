# =============================================================================
# BotCriptoFy2 - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# For local development, you can use the default values provided below

# =============================================================================
# DATABASE (PostgreSQL + TimescaleDB)
# =============================================================================
POSTGRES_DB=botcriptofy2
POSTGRES_USER=botcriptofy2
POSTGRES_PASSWORD=botcriptofy2
POSTGRES_PORT=5432

# Database connection URL (for Drizzle ORM)
DATABASE_URL=postgresql://botcriptofy2:botcriptofy2@localhost:5432/botcriptofy2

# =============================================================================
# REDIS (Cache & Queue)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=botcriptofy2

# Redis connection URL (optional - if not provided, uses individual vars)
REDIS_URL=redis://default:botcriptofy2@localhost:6379

# =============================================================================
# OLLAMA (AI Model Server)
# =============================================================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_PORT=11434
# Model to use (qwen3:0.6b recommended for development)
OLLAMA_MODEL=qwen3:0.6b

# =============================================================================
# BETTER-AUTH (Authentication)
# =============================================================================
# Generate a random secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-super-secret-key-change-this-in-production

# Base URL for your application
BETTER_AUTH_URL=http://localhost:3000

# =============================================================================
# APPLICATION
# =============================================================================
NODE_ENV=development
PORT=3000
BACKEND_PORT=3000
FRONTEND_PORT=4321

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:4321

# =============================================================================
# STRIPE (Payment Gateway) - Optional
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# TELEGRAM BOT (Notifications & AI Agents) - Optional
# =============================================================================
# Get your token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# =============================================================================
# EMAIL PROVIDER - Optional (for notifications)
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SendGrid (alternative to SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key

# =============================================================================
# PUSH NOTIFICATIONS - Optional (Firebase Cloud Messaging)
# =============================================================================
FCM_PROJECT_ID=your-firebase-project-id
FCM_CLIENT_EMAIL=your-firebase-client-email
FCM_PRIVATE_KEY=your-firebase-private-key

# =============================================================================
# MONITORING & OBSERVABILITY - Optional
# =============================================================================
# Sentry (Error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project

# Prometheus
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# EXTERNAL APIS - Optional
# =============================================================================
# Binance API (for trading module)
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# Coinbase API
COINBASE_API_KEY=your-coinbase-api-key
COINBASE_API_SECRET=your-coinbase-api-secret

# =============================================================================
# DEVELOPMENT OPTIONS
# =============================================================================
# Enable debug logging
DEBUG=false

# Enable API documentation (Swagger)
ENABLE_SWAGGER=true

# Enable hot reload
HOT_RELOAD=true

# Log level (fatal, error, warn, info, http, debug, trace)
LOG_LEVEL=info
