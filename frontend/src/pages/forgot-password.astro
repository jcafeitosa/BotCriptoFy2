---
import Layout from '../layouts/Layout.astro';
import { DottedGlowContainer } from '../components/ui/DottedGlowBackground';
import { Card, CardHeader, CardTitle, CardDescription, CardContent, CardFooter } from '../components/ui/Card';
import { Input } from '../components/ui/Input';
import { Button } from '../components/ui/Button';
import { HighlightText } from '../components/ui/HighlightBracket';
---

<Layout title="Forgot Password - BotCriptoFy">
  <DottedGlowContainer client:load>
  <main class="relative min-h-screen flex items-center justify-center p-4">
    <div class="relative z-10 w-full max-w-md">
      <div class="text-center mb-12">
        <a href="/" class="inline-block mb-8">
          <span class="text-4xl font-bold tracking-tight">
            <span class="text-gray-100">Bot</span><span class="text-cyan-400">Cripto</span><span class="text-gray-100">Fy</span>
          </span>
        </a>
        <h1 class="text-3xl font-bold text-gray-100 mb-2">
          Reset your <HighlightText color="neon" client:load>password</HighlightText>
        </h1>
        <p class="text-gray-300">Enter your email and we'll send you a link to reset your password</p>
      </div>

      <div class="bg-gray-950/50 border border-white/10 rounded-2xl p-8">
        <form class="space-y-6">
            <div>
              <Input
                type="email"
                label="Email"
                placeholder="trader@example.com"
                client:load
              />
            </div>

            <button type="submit" class="w-full bg-white text-black hover:bg-gray-200 transition-colors text-base font-semibold px-6 py-3.5 rounded-xl">
              Send Reset Link →
            </button>

            <div class="relative my-6">
              <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-white/10"></div>
              </div>
              <div class="relative flex justify-center text-xs">
                <span class="px-4 bg-gray-950 text-gray-500">or</span>
              </div>
            </div>

            <div class="flex items-center justify-center gap-4 text-sm">
              <a href="/login" class="text-cyan-400 hover:text-cyan-300 font-medium transition-colors">
                Back to login
              </a>
              <span class="text-gray-700">•</span>
              <a href="/register" class="text-cyan-400 hover:text-cyan-300 font-medium transition-colors">
                Create account
              </a>
            </div>
          </form>
      </div>

      {/* Info Box */}
      <div class="mt-6 p-4 rounded-xl bg-cyan-400/10 border border-cyan-400/20">
        <div class="flex items-start space-x-3">
          <svg class="w-5 h-5 text-cyan-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <div>
            <p class="text-sm text-cyan-400 font-semibold">Password Reset Info</p>
            <ul class="text-xs text-gray-400 mt-1 space-y-1">
              <li>• Reset link will be sent to your email</li>
              <li>• Link expires in 1 hour</li>
              <li>• Check spam folder if not received</li>
            </ul>
          </div>
        </div>
      </div>

      <div class="mt-8 text-center">
        <a href="/" class="text-sm text-gray-400 hover:text-gray-200 transition-colors inline-flex items-center gap-2">
          ← Back to home
        </a>
      </div>
    </div>
  </main>
  </DottedGlowContainer>
</Layout>
