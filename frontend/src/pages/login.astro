---
import Layout from '../layouts/Layout.astro';
import { DottedGlowContainer } from '../components/ui/DottedGlowBackground';
import { OAuthButtons } from '../components/auth/OAuthButtons';
import { LoginForm } from '../components/auth/LoginForm';
import { HighlightText } from '../components/ui/HighlightBracket';
---

<Layout title="Login - BotCriptoFy">
  <DottedGlowContainer client:load>
  <main class="relative min-h-screen flex items-center justify-center p-4">

    <div class="relative z-10 w-full max-w-md">
      {/* Logo */}
      <div class="text-center mb-12">
        <a href="/" class="inline-block mb-8">
          <span class="text-4xl font-bold tracking-tight">
            <span class="text-gray-100">Bot</span><span class="text-cyan-400">Cripto</span><span class="text-gray-100">Fy</span>
          </span>
        </a>
        <h1 class="text-3xl font-bold text-gray-100 mb-2">
          <HighlightText color="neon" client:load>Welcome</HighlightText> back
        </h1>
        <p class="text-gray-300">Entre na sua conta para continuar</p>
      </div>

      {/* Login Form */}
      <div class="bg-gray-950/50 border border-white/10 rounded-2xl p-8">
        {/* OAuth Buttons */}
        <OAuthButtons client:load />

        {/* Divider */}
        <div class="relative my-8">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-white/10"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-4 bg-gray-950 text-gray-500">Or continue with email</span>
          </div>
        </div>

        {/* Login Form */}
        <LoginForm client:load />
      </div>

      {/* Back to Home */}
      <div class="mt-8 text-center">
        <a href="/" class="text-sm text-gray-400 hover:text-gray-200 transition-colors inline-flex items-center gap-2">
          ‚Üê Back to home
        </a>
      </div>
    </div>
  </main>
  </DottedGlowContainer>
</Layout>
