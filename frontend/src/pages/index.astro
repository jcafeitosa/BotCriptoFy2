<script>
  // ============================================
  // 0. MOBILE MENU TOGGLE
  // ============================================
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close mobile menu when clicking a link
  const mobileMenuLinks = mobileMenu?.querySelectorAll('a');
  mobileMenuLinks?.forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });

  // ============================================
  // 0.5. SMOOTH SCROLL FOR NAVIGATION (com offset din√¢mico da navbar)
  // ============================================
  document.querySelectorAll('.scroll-link').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const targetId = this.getAttribute('href');
      const targetElement = document.querySelector(targetId);

      if (targetElement) {
        // Calcular altura real da navbar
        const navbar = document.querySelector('nav');
        const navbarHeight = navbar ? navbar.offsetHeight : 0;

        // Adicionar 20px de margem extra para espa√ßamento visual
        const offset = navbarHeight + 20;

        // Calcular posi√ß√£o com offset
        const elementPosition = targetElement.getBoundingClientRect().top;
        const offsetPosition = elementPosition + window.pageYOffset - offset;

        // Scroll suave at√© a posi√ß√£o calculada
        window.scrollTo({
          top: offsetPosition,
          behavior: 'smooth'
        });

        // Fechar menu mobile se estiver aberto
        const mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
          mobileMenu.classList.add('hidden');
        }
      }
    });
  });

  // ============================================
  // 0.6. NAVBAR BACKGROUND ON SCROLL
  // ============================================
  const navbar = document.querySelector('nav');
  
  window.addEventListener('scroll', () => {
    if (window.scrollY > 50) {
      navbar?.classList.add('nav-scrolled');
    } else {
      navbar?.classList.remove('nav-scrolled');
    }
  });

  // ============================================
  // 0.7. INTERSECTION OBSERVER FOR FADE-IN
  // ============================================
  const fadeInSections = document.querySelectorAll('.fade-in-section');
  
  const observerOptions = {
    threshold: 0.15,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, observerOptions);

  fadeInSections.forEach(section => {
    observer.observe(section);
  });

  // ============================================
  // 1. MODAL DE V√çDEO
  // ============================================
  const modalTrigger = document.querySelector('[data-modal-trigger]');
  const modal = document.getElementById('video-modal');
  const closeModal = document.getElementById('close-modal');

  modalTrigger?.addEventListener('click', () => {
    modal?.classList.remove('hidden');
    modal?.classList.add('flex');
    document.body.style.overflow = 'hidden'; // Prevent scrolling
  });

  closeModal?.addEventListener('click', () => {
    modal?.classList.add('hidden');
    modal?.classList.remove('flex');
    document.body.style.overflow = ''; // Restore scrolling
  });

  modal?.addEventListener('click', (e) => {
    if (e.target === modal) {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = ''; // Restore scrolling
    }
  });

  // ============================================
  // 2. SIMULADOR DE ROI INTERATIVO
  // ============================================

  // Estado do simulador
  let investment = 10000;
  let riskProfile = 'medium';

  // Perfis de risco (taxa mensal)
  const riskProfiles = {
    low: 0.04,      // 4% ao m√™s (conservador)
    medium: 0.10,   // 10% ao m√™s (moderado)
    high: 0.20      // 20% ao m√™s (agressivo)
  };

  // Fun√ß√£o para formatar moeda
  function formatCurrency(value) {
    return new Intl.NumberFormat('pt-BR', {
      style: 'currency',
      currency: 'BRL',
      minimumFractionDigits: 0,
      maximumFractionDigits: 0
    }).format(value);
  }

  // Fun√ß√£o para calcular retornos compostos
  function calculateReturns() {
    const monthlyRate = riskProfiles[riskProfile];

    // C√°lculo composto: FV = PV * (1 + r)^n
    const return6m = investment * Math.pow(1 + monthlyRate, 6);
    const return1y = investment * Math.pow(1 + monthlyRate, 12);
    const profit = ((return1y - investment) / investment) * 100;

    // Atualizar UI
    const result6m = document.getElementById('result-6m');
    const result1y = document.getElementById('result-1y');
    const resultProfit = document.getElementById('result-profit');

    if (result6m) result6m.textContent = formatCurrency(return6m);
    if (result1y) result1y.textContent = formatCurrency(return1y);
    if (resultProfit) resultProfit.textContent = `+${profit.toFixed(0)}%`;
  }

  // Slider de investimento
  const investmentSlider = document.getElementById('investment-slider');
  const investmentValue = document.getElementById('investment-value');

  investmentSlider?.addEventListener('input', (e) => {
    investment = parseInt(e.target.value);
    if (investmentValue) {
      investmentValue.textContent = formatCurrency(investment);
    }
    calculateReturns();
  });

  // Bot√µes de perfil de risco
  const riskButtons = document.querySelectorAll('.risk-btn');

  riskButtons.forEach(button => {
    button.addEventListener('click', () => {
      // Remove estado ativo de todos
      riskButtons.forEach(btn => {
        btn.classList.remove('bg-cyan-500/20', 'border-cyan-500', 'border-2', 'text-white');
        btn.classList.remove('bg-green-500/20', 'border-green-500', 'border-2');
        btn.classList.remove('bg-red-500/20', 'border-red-500', 'border-2');
        btn.classList.add('bg-white/5', 'border', 'border-white/10', 'text-gray-400');
      });

      // Adiciona estado ativo ao bot√£o clicado
      const risk = button.getAttribute('data-risk');
      riskProfile = risk;

      button.classList.remove('bg-white/5', 'border', 'border-white/10', 'text-gray-400');
      button.classList.add('text-white', 'border-2');

      if (risk === 'low') {
        button.classList.add('bg-green-500/20', 'border-green-500');
      } else if (risk === 'medium') {
        button.classList.add('bg-cyan-500/20', 'border-cyan-500');
      } else if (risk === 'high') {
        button.classList.add('bg-red-500/20', 'border-red-500');
      }

      calculateReturns();
    });
  });

  // Calcular valores iniciais
  calculateReturns();

  // ============================================
  // 3. CONTADOR DIN√ÇMICO DE TRADERS
  // ============================================

  const traderCounterEl = document.getElementById('active-traders');
  let traderCount = 5247;

  // Atualiza o contador a cada 3-8 segundos com varia√ß√£o aleat√≥ria
  function updateTraderCounter() {
    const variation = Math.floor(Math.random() * 10) - 5; // -5 a +5
    traderCount = Math.max(5200, Math.min(5300, traderCount + variation));

    if (traderCounterEl) {
      traderCounterEl.textContent = traderCount.toLocaleString('pt-BR');
    }

    // Pr√≥xima atualiza√ß√£o em 3-8 segundos
    const nextUpdate = 3000 + Math.random() * 5000;
    setTimeout(updateTraderCounter, nextUpdate);
  }

  // Inicia o contador ap√≥s 3 segundos
  setTimeout(updateTraderCounter, 3000);
</script>
